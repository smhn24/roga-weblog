<h3 class="mt-2 text-center">ساخت پست جدید</h3>
<div class="w-50 mx-auto">
    <%- include('../includes/validationErrors.ejs') %>
</div>
<div class="d-flex align-items-center justify-content-center">
    <form action="/dashboard/add-post" class="w-50" method="POST">
        <div class="form-group">
            <label for="title">عنوان پست</label>
            <input type="text" class="form-control w-50" name="title" id="title" />
        </div>

        <div class="form-group">
            <label for="status">وضعیت</label>
            <select name="status" class="form-control w-25" id="status">
                <option value="عمومی" selected>عمومی</option>
                <option value="خصوصی">خصوصی</option>
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-sm btn-outline-secondary" type="button" id="imageUpload">
                    آپلود عکس
                </button>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="selectedImage">
                <label for="selectedImage" id="imageStatus" class="custom-file-label">
                    عکس مورد نظر را انتخاب کنید
                </label>
            </div>
        </div>

        <button class="btn btn-secondary" type="button" id="copy-clipboard" data-clipboard-target="#imageStatus">
            کپی لینک
        </button>

        <div id="progressDiv" style="display: none;">
            <div class="progress">
                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                    role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <div class="w-100 bg-light mt-3">
            <p id="uploadResult" class="overflow-auto"></p>
        </div>

        <div class="form-group">
            <h5>متن اصلی پست</h5>
            <textarea name="body" class="form-control" id="body"></textarea>
        </div>

        <div class="row">
            <input type="submit" value="ساخت پست" class="btn btn-success m-2" />
            <a href="/dashboard" class="btn btn-warning m-2">انصراف</a>
        </div>
    </form>
</div>