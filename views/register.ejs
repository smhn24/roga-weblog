<form class="form-signin" action="/users/register" method="post">
    <h1 class="h3 mb-3 font-weight-normal">ثبت نام کاربر</h1>
    <%- include('./includes/validationErrors.ejs') %>
    <label for="inputFullname" class="sr-only">نام و نام خانوادگی</label>
    <input name="fullname" id="inputFullname" class="form-control mb-2" placeholder="نام و نام خانودگی" required
        autofocus>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input name="email" type="email" id="inputEmail" class="form-control mb-2" placeholder="آدرس ایمیل" required>
    <label for="inputPassword" class="sr-only">کلمه عبور</label>
    <input name="password" type="password" id="inputPassword" class="form-control mb-2" placeholder="کلمه عبور"
        required>
    <label for="inputConfirmPassword" class="sr-only">تکرار کلمه عبور</label>
    <input name="confirmPassword" type="password" id="inputConfirmPassword" class="form-control"
        placeholder="تکرار کلمه عبور" required>
    <div class="checkbox mb-3">
        <label>
            <a href="/users/login">حساب کاربری دارم</a>
        </label>
    </div>
    <div class="form-group">
        <div class="g-recaptcha" data-sitekey="6LfvI7ceAAAAADZh5x3mxYt6GRwKsPsPkraxLel3"></div>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ثبت نام</button>
</form>