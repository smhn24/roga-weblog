<form action="/users/forget-password" method="POST" id="loginForm" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">فراموشی رمز عبور</h1>
    <%- include('./includes/loginmessages.ejs') %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input type="email" id="inputEmail" name="email" class="form-control mb-2" placeholder="آدرس ایمیل" required
        autofocus>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ریست رمز عبور</button>
</form>